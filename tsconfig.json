{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist",
		"strict": true,
		"removeComments": false,
		"esModuleInterop": true,
		"module": "preserve",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"include": ["src/**/*"]
}
