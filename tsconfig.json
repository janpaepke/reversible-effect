{
	"compilerOptions": {
		"target": "ES6",
		"baseUrl": "./src",
		"outDir": "./dist",
		"strict": true,
		"removeComments": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"include": ["src/**/*"]
}
